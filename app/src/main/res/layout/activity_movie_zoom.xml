<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="async.example.com.moviesapp.MovieZoom">

    <ImageView
        android:id="@+id/picZoom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@android:color/holo_blue_light"/>

    <TextView
        android:id="@+id/titleZoom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:background="#80000000 "
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/filmName"
        android:textSize="40sp"/>

    <TextView
        android:id="@+id/yearZoom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/titleZoom"
        android:layout_marginLeft="30dp"
        android:background="#80000000 "
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:text="@string/filmYear"
        android:textSize="30sp"/>
</RelativeLayout>
